{
  "env": {
    "node": true,
    "es2021": true,
    "vue/setup-compiler-macros": true
  },
  "extends": [
    "eslint:recommended",
    "plugin:vue/vue3-essential"
  ],
  "parserOptions": {
    "ecmaVersion": "latest",
    "sourceType": "module"
  },
  "plugins": ["vue"],
  "rules": {
    "no-unused-vars": ["warn", { "argsIgnorePattern": "^_" }],
    "no-console": "off",
    "indent": ["error", 2],
    "quotes": ["error", "single"],
    "semi": ["error", "never"],
    "vue/multi-word-component-names": "off",
    "vue/no-v-html": "off"
  },
  "ignorePatterns": [
    "node_modules/**",
    "dist/**",
    "build/**",
    "unpackage/**",
    "uni_modules/**",
    "*.min.js",
    "coverage/**",
    ".git/**"
  ]
}

