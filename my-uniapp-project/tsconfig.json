{
  "compilerOptions": {
    "target": "es2016",
    "module": "esnext",
    "jsx": "preserve",
    "moduleResolution": "node",
    "strict": false,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "allowJs": true,
    "noEmit": true,
    "baseUrl": ".",
    "paths": {
      "@/*": ["*"]
    },
    "typeRoots": ["./node_modules/@types", "./node_modules/@dcloudio/types"]
  },
  "include": ["**/*.ts", "**/*.tsx", "**/*.vue", "global.d.ts"],
  "exclude": ["node_modules", "unpackage", "dist"]
}